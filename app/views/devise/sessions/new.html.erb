<%# 
    이 부분은 로그인 포맷이다.
    이메일/비밀번호 확인으로 구성된다.
    정보 기억하기 기능도 있다.
%>
<div class="form-signin">
  <h2>로그인 하기</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, "이메일" %>
      <%= f.email_field :email, :placeholder => "이메일을 입력해주세요.", autofocus: true, class: "form-control", required: false %>
    </div>

    <div class="form-group">
      <%= f.label :password, "비밀번호" %>
      <%= f.password_field :password, :placeholder => "비밀번호를 입력해주세요.", class: "form-control", required: false %>
    </div>

    <div class="checkbox">
      <label>
      <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> 정보 기억하기
      </label>
    </div>

    <div class="form-group">
      <%= f.submit "로그인", class: "btn btn-primary" %>
    </div>

  <% end %>


<%= render "devise/shared/links" %>
</div>