<h2>로그인 하기</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email, "이메일" %>
    <%= f.email_field :email, autofocus: true, class: "form-control", required: false %>
  </div>

  <div class="form-group">
    <%= f.label :password, "비밀번호" %>
    <%= f.password_field :password, class: "form-control", required: false %>
  </div>

  <div class="checkbox">
    <label>
    <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> 정보 기억하기
    </label>
  </div>

  <div class="form-group">
    <%= f.submit "로그인", class: "btn btn-primary" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
