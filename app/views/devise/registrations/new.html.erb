<%# 
    이 부분은 회원가입 포맷이다.
    이름/이메일/비밀번호/비밀번호 확인으로 구성된다.
%>
<div class="form-signin">
  <h2>회원 가입</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="form-group">
          <%= f.label :name, "이름" %>
          <%= f.text_field :name, :placeholder => "이름이나 닉네임을 입력해주세요.", class: "form-control", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.label :email, "이메일" %>
        <%= f.email_field :email, :placeholder => "이메일을 입력해주세요.(로그인시 필요)", autofocus: true, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "비밀번호" %>
        <%= f.password_field :password, :placeholder => "비밀번호를 입력해주세요.", class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "비밀번호 확인" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.submit "회원가입 완료", class: "btn btn-lg btn-primary" %>
      </div>
  <% end %>
</div>
