<%# 이 부분은 글 작성을 할 때 공통적을 사용되는 포맷이다.
    제목과 내용이 있고, 내용은 tinymce css/js 가 적용되어 보여진다. %>

<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "제목" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, "내용" %><br>
    <%= f.text_area :content, class: "tinymce form-control", :rows => 20 %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "글 작성하기", class: "btn btn-lg btn-primary" %>
    <%= link_to '뒤로 돌아가기', posts_path, class: "btn btn-lg btn-default" %>
  </div>

<% end %>
