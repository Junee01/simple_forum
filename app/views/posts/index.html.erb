<table class="table table-striped">
	<thead>
          <tr>
            <th>글번호</th>
            <th>제목/글쓴이</th>
            <th>최근 수정일</th>
            <th>조회 수</th>
            <th class="text-center">좋아요/싫어요</th>
            <th>마지막 댓글</th>
          </tr>
    </thead>
    <tbody>
    	<% @posts.each do |post| %>
    		<tr>
                <td><%= post.id %></td>
    			<td>
                    <%= link_to post.title, post %> <span class="badge"><%= post.comments.count %></span><br>
                    <small><strong><%= post.user.name %></strong>  (<%= time_ago_in_words(post.updated_at) %> 전, <%= post.created_at.to_date %>)</small>
                </td>
    			<td><%= time_ago_in_words(post.updated_at) %> 전, <%= post.updated_at.to_date %></td>
    			<% if post.hits >= 50 %>
                    <td class="over-fifty"><%= post.hits %></td>
                <% else %>
                    <td><%= post.hits %></td>
                <% end %>
                <td class="text-center"><%= post.get_upvotes.size %>/<%= post.get_downvotes.size %></td>
                <% if post.comments.empty? %>
                    <td></td>
                <% else %>
                    <td><%= time_ago_in_words(post.updated_at) %> 전, <strong><% if post.comments.last.user.nil? %>익명<% else %><%= post.comments.last.user.name %><% end %></strong></td>
                <% end %>
    		</tr>
    	<% end %>
    </tbody>
</table>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
